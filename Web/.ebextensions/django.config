option_settings:
    aws:elasticbeanstalk:environment:proxy:staticfiles:
        /static: static
    aws:elasticbeanstalk:application:environment:
        DJANGO_SETTINGS_MODULE: Web.settings
    aws:elasticbeanstalk:container:python:
        WSGIPath: Web.wsgi:application

container_commands:
    01_activate:
        command: "source /var/app/venv/*/bin/activate"
        leader_only: true
    02_migrate:
        command: "python3 main.py migrate --noinput"
        leader_only: true
    03_collect:
        command: "python3 main.py collectstatic --noinput"
        leader_only: true
    04_update:
        command: "npm update && npx browserslist@latest --update-db && npm install --save-dev webpack && npm audit fix"
        leader_only: true
